extends layout

block content
    .w3.container   
        .w3-card-4
            header.w3-container.w3-teal
                h3 Novo item
            .w3-container
                form.w3-container(action='/alunos' method='POST' id='form1')
                    label
                        b Identificador
                    input.w3-input.w3-border.w3-light-grey(type='text' name='identificador')
                    label
                        b Nome
                    input.w3-input.w3-border.w3-light-grey(type='text' name='nome')
                    label
                        b Curso
                    input.w3-input.w3-border.w3-light-grey(type='text' name='curso')
                    input.w3-btn.w3-blue-grey(type='submit' value='Enviar')

    .w3.container   
        .w3-card-4
            header.w3-container.w3-teal
                h3 Lista de Alunos
            .w3-container
                table.w3-table-all
                    tr
                        th Identificador
                        th Nome
                        th Curso
                        th Ver
                        th Remover
                    each al in lista
                        tr
                            td= al.identificador
                            td= al.nome
                            td= al.curso
                            td
                              form.form-inline(method="get" action=`/alunos/${al.identificador}`)
                                button.w3.button.w3-circle.w3-blue-grey(type="submit") View
                            td
                                button.w3.button.w3-circle.w3-blue-grey(onclick="removeAluno('" + al.identificador +"')") Remover
                                

            footer.w3-container.w3-teal
                address Gerado por Gest√£o de Alunos App:
